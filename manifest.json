{
  "manifest_version": 2,
  "name": "OrgGPT",
  "version": "0.1.0",
  "description": "A Firefox extension to enhance the ChatGPT UI experience",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "512": "icons/icon-512.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "OrgGPT"
  }
}

